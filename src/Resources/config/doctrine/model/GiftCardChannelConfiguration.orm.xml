<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <mapped-superclass name="Macbim\SyliusGiftCardsPlugin\Model\GiftCardChannelConfiguration"
                       table="macbim_sylius_gift_cards_gift_card_channel_configuration">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="code" unique="true" column="code"/>
        <field name="enabled" type="boolean"/>
        <field name="expirationDelay" type="string" column="expiration_delay"/>

        <many-to-one field="channel" target-entity="Sylius\Component\Channel\Model\ChannelInterface">
            <join-column name="channel_id" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
        </many-to-one>
    </mapped-superclass>
</doctrine-mapping>
